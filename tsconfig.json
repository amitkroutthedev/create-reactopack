{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "target": "ESNext",
    "allowSyntheticDefaultImports":true
  },

  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "templates"
  ]
}

{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "target": "ESNext",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },

  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "templates"]
}
